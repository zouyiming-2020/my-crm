<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjpowernode.crm.workbench.dao.CustomerRemarkDao">

    <!--void saveCustomerRemarks(List<CustomerRemark> customerRemarkList);-->
    <insert id="saveCustomerRemarks">
        insert into tbl_customer_remark
        (
        id,
        noteContent,
        createTime,
        createBy,
        editFlag,
        customerId
        )
        values
        <foreach collection="list" separator="," item="c">
            (
            #{c.id},
            #{c.noteContent},
            #{c.createTime},
            #{c.createBy},
            #{c.editFlag},
            #{c.customerId}
            )
        </foreach>
    </insert>


</mapper>